.display
  flex-grow 1
  margin-left 10px

.displayHeading
  margin-bottom 0
  margin-top 10px

.displayPage
  display flex
  flex-direction row

@media (max-width: 700px)
  .displayPage
    flex-direction column
  
  legend
    text-align center

.displayList
  display inline
  flex-shrink 0
  
.book
  display block
  font-size 9pt

legend, fieldset
  display inline-block
  margin 0px
  white-space pre-line

fieldset
  margin-top 20px
  display flex
  flex-grow 1

legend h1, legend h2, legend h3
  margin-bottom 0
  margin-top -15px

details summary::-webkit-details-marker
  display none

details summary
  cursor pointer
