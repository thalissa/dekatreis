html
  width 100%
  height 100
  background #efe4f5
  font-family BookInsanity
  font-size 11pt

body
  padding 20px
  border-radius 25px
  border 2px #f5f5f5 solid
  background #ccc
  color #3a3f51

@font-face
  font-family BookInsanity
  src url(../assets/styling/Bookinsanity.otf)

h1
  font-size 22pt
h2
  font-size 15pt
h3
  font-size 13pt
  border-bottom 2px solid #c9ad6a
h4
  font-size 11pt
h5
  font-size 8pt
h6
  font-size 6pt
  margin-top 0px
  margin-bottom 0px

h1, h2, h3, h4, h5, h6
  color #4E2A84
  margin-block-end .2em

a, a:visited
  color #813ce8
  cursor pointer
  text-decoration none

a:hover
  text-decoration underline

.app
  display flex

.view
  flex-grow 1

.mainLink a, .link a
  padding 5px

.header
  display flex
  flex-direction row
  justify-content center

.header .link, .header .mainLink
  align-self baseline
  margin-left 5px
  margin-right 5px

.header .mainLink
  font-size 18pt

.header
  display flex
  flex-direction column
  justify-content center

.top, .middle
  display flex
  justify-content center
  flex-direction row
  margin 5px

tr:first-child
  background-color #f5f5f5
  text-align center

tr, td
  border 1px #4E2A84 solid
  padding 3px

table
  margin-top 10px
  white-space pre-line
  font-size 11pt

details summary::-webkit-details-marker
  display none

details summary
  cursor pointer
  display flex
  flex-grow 1
