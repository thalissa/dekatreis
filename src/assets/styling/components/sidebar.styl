#sidebar
  margin-left 0
  margin-right 0
  padding 5px
  display flex
  flex-direction column
  min-width 160px
  max-width 160px
  min-height 100%
  flex-grow 1

.site, .support
  margin-top 10px

.head
  font-size 30px

.smallerhead
  font-size 18px
  text-decoration underline

#sidebarToggle
  position absolute
  top 40%
  border-radius 50%
  height 35px
  width 35px
  cursor pointer
  margin-left 150px

#arrow
  border-width 4px 0 0 4px
  display inline-block
  padding 7px
  margin-top 9px
  margin-left 10px
  transform rotate(-45deg)
  -webkit-transform rotate(-45deg)

.closed
  margin-left -17px !important
  transform scaleX(-1)
  -webkit-transform scaleX(-1)
