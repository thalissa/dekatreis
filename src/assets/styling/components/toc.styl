.tocHead h2
  margin 0

.toc
  display flex
  flex-direction row
  flex-grow 1
  padding-inline-start 0
  margin-top 0

.tocHeader
  margin 10px
  display inline-block
  flex-grow 0
  
.section
  display flex
  flex-direction column
  flex-wrap wrap
  border 2px #CDC solid
  padding 10px

.subsection
  flex-wrap wrap
  flex-direction column
  margin 5px

@media(max-width 1000px)
  .toc
    flex-direction column
  
  .tocHeader
    flex-grow 1

.toc a
  color inherit !important

.toc li
  list-style-type none

.book
  display inline-block
  font-size 7pt
  margin-left 5px

.toc li h3
  margin-bottom 4px !important
  margin-top 10px !important
  line-height initial !important
  text-align center

.toc li h5, .toc li a
  line-height initial !important
  cursor pointer
  display inline-block
  color #4E2A84 !important
  font-size 13.28px
  font-weight 700
  
.toc ul
  padding-left 0.3em
  line-height 1.3em
  list-style-type none

.toc>ul>li
  margin-bottom initial !important

ul .sublist
  font-size 10pt

pre
  word-break keep-all

.subtext
  margin-top 5px
  font-size 9pt
  text-align center
